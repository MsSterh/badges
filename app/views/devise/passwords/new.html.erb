<div class="FormDevise">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <div class="FormDevise-label">
        <%= f.label :email %>
      </div>
      <div class="FormDevise-field">
        <%= f.email_field :email, autofocus: true, class: "Input" %>
      </div>
    </div>

    <div class="FormDevise-field--shifted">
      <%= f.submit "Send me reset password instructions", class: 'BtnBase' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
