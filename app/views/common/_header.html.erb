<div class="Header">
  <div class="Content">
    <div class="Logo">
      <%= link_to (content_tag :span, "Changeable", class: "Logo-color") + Item, :collections %>
    </div>
    <div class="Menu">
      <% if user_signed_in? %>
        <span>Namaste, <%= link_to current_user.name || current_user.email, user_root_path %></span>
        <%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
      <% else %>
        <%= link_to 'Log In', new_user_session_path %> or <%= link_to 'Sign In', new_user_registration_path %>
      <% end %>
    </div>
  </div>
</div>
